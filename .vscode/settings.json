{
  // 🌐 Idiomas que acepta el corrector
  "cSpell.language": "en,es",
  "cSpell.dictionaries": ["en", "es"],

  // ✅ Nuevo formato: habilitar o deshabilitar por tipo de archivo
  "cSpell.enabledFileTypes": {
    "*": true, // activa todos por defecto
    "json": false, // desactiva revisión en JSON
    "log": false,
    "plaintext": true,
    "typescript": true
  },

  // 🚫 Ignorar rutas innecesarias
  "cSpell.ignorePaths": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".git",
    "package-lock.json",
    "yarn.lock"
  ],

  // 🧠 Palabras personalizadas del backend
  "cSpell.words": [
    "supabase",
    "nombre",
    "descripcion",
    "precio",
    "stock",
    "categoria",
    "categorias",
    "etiqueta",
    "etiquetas",
    "imagenUrl",
    "producto",
    "productos",
    "encontrado",
    "actualizado",
    "eliminado",
    "controlador",
    "servicio",
    "repositorio",
    "nest",
    "nestjs",
    "prisma",
    "railway"
  ]
}
