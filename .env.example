# .env.example

# Base de datos (PostgreSQL)
DATABASE_URL="postgresql://<usuario>:<password>@<host>/<db>"
DIRECT_DATABASE_URL="postgresql://<usuario>:<password>@<host>/<db>" # opcional, para operaciones directas (Prisma)

# Servidor
PORT=3000
FRONTEND_URL="http://localhost:5173" # orígenes permitidos separados por comas

# Autenticación
JWT_SECRET="cambia_esta_clave_en_produccion"

# Supabase
SUPABASE_URL="https://<your-project>.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="<service_role_key>"
SUPABASE_ANON_KEY="<anon_key>"
SUPABASE_BUCKET="products"
SUPABASE_SPECS_BUCKET="product-specs"

# Prisma (opcional)
PRISMA_CLIENT_ENGINE_TYPE="library"
PRISMA_CLIENT_DISABLE_PREPARED_STATEMENTS="1"
PRISMA_POOL_TIMEOUT="10"
